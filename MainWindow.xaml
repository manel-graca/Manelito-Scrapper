<Window x:Class="ManelitoScrapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManelitoScrapper"
        mc:Ignorable="d"
        Title="Scrapper by Manuel Graca" Height="175" Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Icon="/icon.targetsize-32_altform-unplated.png"
