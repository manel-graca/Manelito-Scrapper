    <Grid>

        <Button x:Name="scrap_button" Content="Scrap!" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="174" Click="ScrapButtonClick"/>
        <Button x:Name="save_button" Content="Save As..." HorizontalAlignment="Right" Margin="0,0,70,10" VerticalAlignment="Bottom" Width="75" Click="SaveAs" Visibility="Collapsed"/>
        <Button x:Name="open_button" Content="Open" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="55" Click="Open" Visibility="Collapsed"/>
        <Label Content="URL" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>

        <TextBox x:Name="input_text" HorizontalAlignment="Right" Margin="0,14,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="276" 
                 FontStyle="Italic" Height="17.96" FontSize="11" TextChanged="OnInputChanged"/>

        <Label x:Name="status_label" Content="Status: Awaiting orders..." HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>

        <ProgressBar x:Name="progress_bar" HorizontalAlignment="Center" Height="10" VerticalAlignment="Center" Width="310" HorizontalContentAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed"/>


